

/*基础样式*/
@import "../../assets/wxss/common";





.banner {
  margin-top: 45px;
  width: 100%;
  font-size: 0;
}
.banner image {
  width: 100%;
}

.food {
	padding-top: 10px;
	width: 100%;
}
.food .introduct {
  margin-top: 10px;
  margin-bottom: 30px;
}
.food .introduct .one {
  margin-top: 20px;
  font-size: 14px;
  line-height: 24px;
}
.food .introduct .two {
  font-size: 12px;
  line-height: 22px;
}
.tab {
  width: 100%;
  box-sizing: border-box;
  margin-top: 20px;
  margin-bottom: 20px;
  padding-left: 10px;
  padding-right: 10px;
}
.tab .tab_tit {
  width: 100%;
  box-sizing: border-box;
  margin-bottom: 20px;
}
.tab .tab_tit .tit_item {
  text-align: center;
  display: inline-block;
  font-weight: bold;
  font-size: 12px;
  line-height: 30px;
  padding: 7px 18px;
  margin-right: 0;
  width: 50%;
  box-sizing: border-box;
  background-color: #f0d9bb;
}
.tab .tab_tit .tit_item.active{
  background-color: #c1e0c4;
  color: #fff;
}
.tab .tab_con .con_item {
  display: none;
}
.tab .tab_con .con_item.active{
  display: block
}
.tab .tab_con .con_item image {
  width: 100%;
}
.tab .tab_con .con_item image:nth-child(2n) {
  margin-right: 0;
}

.swiper {
  height: 199px;
}
.swiper swiper-item image {
	width: 100%;
	height: 100%;
}

.con_tit {
    text-align: center;
}
.con_tit .con_tit_con {
  display: inline-block;
  color: #333;
  position: relative;
  font-size: 22px;
  line-height: 22px;
  padding-bottom: 8px;
}

.con_tit .con_tit_con:before {
  left: 50%;
  bottom: 0;
  position: absolute;
  content: '';
  height: 2px;
  background: #292929;
  width: 40px;
  margin-left: -20px;
}

.fresh {
  background: #fef8f2;
  width: 100%;
  box-sizing: border-box;
  padding: 20px 10px;
}

.fresh .fresh_con .text {
  font-size: 12px;
  line-height: 22px;
  color: #595959;
  text-align: center;
  width: 100%;
  padding: 0 10px;
  box-sizing: border-box;
  margin: 20px auto;
}
.fresh .fresh_con .item_con .item {
  width: 100%;
  display: inline-block;
  margin-bottom: 5px;
}

.fresh .fresh_con .item_con .item image {
  width: 100%;
}

.focus {
  background-color: #f0d9bd;
  padding-top: 20px;
  padding-bottom: 20px;
	padding-left: 10px;
	padding-right: 10px;
	box-sizing: border-box;
  margin-top: 20px;
}
.focus .focus_con {
    width: 100%;
    margin: 0 auto;
    padding: 0;
    padding-top: 20px;
    overflow: hidden;
    position: relative;
}
.focus .focus_con image {
  width: 100%;
}

.focus .focus_con .border {
  background: rgba(255,255,255,0.91);
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 50%;
  margin-left: -91px;
  margin-top: -91px;
  margin-left: -70px;
  margin-top: -70px;
  width: 140px;
  height: 140px;
  margin-top: -60px;
}

.focus .focus_con .border:before {
  position: absolute;
  content: '';
  top: 50%;
  left: 50%;
  border: 1px dashed #fff;
  border-radius: 50%;
  animation: zhuan 10s linear infinite;
  margin-left: -75px;
  margin-top: -75px;
  width: 150px;
  height: 150px;
}

.focus .focus_con .border .text {
  position: absolute;
  width: 96%;
  text-align: center;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 12px;
  line-height: 20px;
}