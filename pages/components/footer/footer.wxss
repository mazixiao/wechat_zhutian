

/*基础样式*/
@import "../../assets/wxss/common.wxss";


.footers {
  background-color: #4d7435;
  position: relative;
  width: 100%;
  padding: 20px 10px;
  box-sizing: border-box;
}

footer .one {
  margin-bottom: 20px;
  width: 100%;
}

footer .one .left {
  font-size: 0;
  display: inline-block;
}
footer .one .left .item {
  margin-right: 20px;
  height: 22px;
  line-height: 22px;
  display: inline-block;
  position: relative;
}
footer .one .left .item .small {
  position: absolute;
  width: 90px;
  z-index: 1;
  left: 0px;
  top: 32px;
}
footer .one .left .item .iconfont {
  color: #fff;
  font-size: 18px;
  line-height: 30px;
}
footer .one .middle {
  font-size: 0;
  margin-left: 2%;
  width: 62%;
  display: inline-block;
}
footer .one .middle navigator {
  color: #fff;
  display: inline-block;
  text-align: right;
  width: 33.3%;
  line-height: 28px;
  font-size: 14px;
}

footer .two {
  margin-bottom: 15px;
  text-align: center;
}
footer .two .join1 {
  border-radius: 50%;
  display: inline-block;
  position: relative;
  width: 35px;
  height: 35px;
  line-height: 35px;
}
footer .two .join1:before {
  position: absolute;
  content: '';
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  border: 1px solid #fff;
  border-radius: 50%;
}
footer .two .join1 .iconfont {
  font-size: 14px;
  color: #fff;
  display: inline-block;
}
footer .two .join2 {
  color: #fff;
  margin-top: 10px;
  margin-bottom: 5px;
  font-size: 16px;
}
footer .two .join3 {
  font-size: 16px;
  line-height: 20px;
  color: #fff;
  font-weight: bold;
}
footer .copyright {
  text-align: left;
}
footer .copyright view {
  font-size: 14px;
  line-height: 24px;
  color: #fff;
  display: inline-block;
}
footer .copyright view navigator {
  color: #fff;
  font-size: 14px;
}
