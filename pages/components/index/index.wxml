


<view class="index">
	<!-- 头部组件 -->
    <view class='header'> 
        <header></header>
    </view>
    <!-- 轮播图 -->
	<view class='swiper_con'>
		<swiper class='swiper' indicator-dots="{{indicatorDots}}" indicator-color="{{swiperOther}}" indicator-active-color="{{swiperActive}}"
		autoplay="{{swiperAutoplay}}" interval="{{interval}}" duration="{{duration}}"  circular='{{loop}}'>
			<block wx:for="{{imgUrls}}" wx:key='item'>
				<swiper-item>
					<image src="{{item}}" class="slide-image"/>
				</swiper-item>
			</block>
		</swiper>
		<view class="small_video" bindtap='playVideo'>
			<image class='big' src="../../assets/img/small_video.jpg" alt=""/>
			<image class="small" src="../../assets/img/small_zanting.png" alt=""/>
		</view>
	</view>

	<!-- 视频 -->
	<view class="video_con" hidden='{{videoHide}}'>
		<view class="shadow" bindtap='pauseViode'></view>
		<view class="videoss" bindtap='controlPlay'>
			<video id='video' objectFit='cover' controls   poster='../../assets/img/swiper.jpg' src="{{videoSrc}}" ></video>
		</view>
	</view>



