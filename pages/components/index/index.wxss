

/*基础样式*/
@import "../../assets/wxss/common";
/*公共头部样式*/
@import "../header/header";


.index .header {
	width: 100%;
}


.swiper_con {
	position: relative;
}
.swiper {
	margin-top: 45px;
	width: 100%;
	height: 240px;
}

.swiper swiper-item {
	width: 100%;
}
.swiper swiper-item image {
	width: 100%;
	height: 100%;
}

.swiper_con .small_video {
	position: absolute;
	width: 65px;
	height: 65px;
	border: 2px solid #fff;
	left: 5px;
	bottom: 5px;
	z-index: 2;
	overflow: hidden;
	border-radius: 50%;
}

.swiper_con .small_video .big {
	width: 100%;
	height: 100%;
}

.swiper_con .small_video .small {
	width: 10.4px;
	height: 15.2px;
	position: absolute;
	top: 50%;
	left: 53%;
	transform: translate(-50%, -50%);
}

.video_con {
	position: relative;
	z-index: 201;
}

.video_con .shadow {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background-color: rgba(0, 0, 0 ,0.5);
}

.videoss {
	width: 95%;
	position: fixed;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	height: 230px;	
	overflow: hidden;
}
.video_con video {
	width: 100%;
	height: 100%;
}

.video_con .small {
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
	width: 13px;
	height: 19px;
}

/*公共头部*/
.common_tit {
	text-align: center;
}

.common_tit .common_tit_con {
	font-size: 22px;
	line-height: 22px;
	padding-bottom: 8px;
	display: inline-block;
	color: #333;
	position: relative;
}

.common_tit .common_tit_con:before {
	left: 50%;
	bottom: 0;
	position: absolute;
	content: '';
	height: 2px;
	background: #333;
	width: 40px;
	margin-left: -20px;    
}

.about {
	padding-top: 20px;
	width: 100%;
	padding-left: 10px;
	padding-right: 10px;
	box-sizing: border-box;
}

.about .about_con {
	margin-top: 20px;
}

.about .about_con .item {
	width: 49%;
	margin-right: 2%;
	margin-bottom: 10px;
	display: inline-block;
	vertical-align: top;
}

.about .about_con .item:nth-child(2n) {
	margin-right: 0;
}

.about .about_con .item .img {
	width: 100%;
}
.about .about_con .item .text {
  text-align: center;
}
.about .about_con .item .text .one {
  font-size: 16px;
  line-height: 24px;
  margin-top: 10px;  
  margin-bottom: 5px;
  font-weight: bold;
  /* display: inline-block; */
}
.about .about_con .item .text .two {
  font-size: 12px;
  line-height: 22px;
}

.join {
	padding-top: 20px;
  padding-bottom: 0px;
	width: 100%;
	padding-left: 10px;
	padding-right: 10px;
	box-sizing: border-box;
}

.join .join_con {
	margin-top: 30px;
}

.join .join_con .item {
	width: 50%;
	display: inline-block;
	vertical-align: top;
  text-align: center;
  margin-bottom: 20px;
}

.join .join_con .item .img {
  display: inline-block;
  height: 100px;  
  width: 100px;  
  border-radius: 50%;
  background-color: #4d7435;
  position: relative;
}
.join .join_con .item .img image {
  width: 40px;
  position: absolute;
  content: '';
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.join .join_con .item .img:before {
  position: absolute;
  content: '';
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  width: 120px;
  height: 120px;
  border: 2px solid #4d7435;
  border-radius: 50%;
}

.join .join_con .item .text {
  text-align: center;
}
.join .join_con .item .text .one {
  font-size: 16px;
  line-height: 24px;
  margin-top: 15px;  
  margin-bottom: 5px;
  font-weight: bold;
  /* display: inline-block; */
}
.join .join_con .item .text .two {
  font-size: 12px;
  line-height: 22px;
}

.food {
	padding-top: 10px;
	width: 100%;
	padding-left: 10px;
	padding-right: 10px;
	box-sizing: border-box;
}
.food .introduct {
  margin-top: 10px;
  margin-bottom: 30px;
}
.food .introduct .one {
  margin-top: 20px;
  font-size: 14px;
  line-height: 24px;
}
.food .introduct .two {
  font-size: 12px;
  line-height: 22px;
}
