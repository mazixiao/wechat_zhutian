

/*基础样式*/
@import "../../assets/wxss/common";





.banner {
  margin-top: 45px;
  width: 100%;
  font-size: 0;
  position: relative;
}
.banner image {
  width: 100%;
}

.back-prev {
  width: 50px;
  /* height: 50px; */
  color: #02cfd4;
  display: inline-block;
  font-size: 14px;
  position: absolute;
  top: 20px;
  left: 20px;
  z-index: 1;
}



.news_detail {
  width: 100%;
  box-sizing: border-box;
  padding: 0 10px;
  padding-top: 25px;
  margin-bottom: 20px;
}
.news_detail .texts {
  text-align: center;
}
.news_detail .texts .one {
  font-weight: bold;
  font-size: 14px;
  line-height: 24px;
}
.news_detail .texts .two {
  font-weight: bold;
  font-size: 14px;
  line-height: 24px;
}


.newCon .item {
  border-bottom: 1px solid #ddd;
  padding-bottom: 10px;
}

.newCon .item .title {
  font-size: 16px;
  color: #02cfd4;
  font-weight: 400;
  line-height: 24px;
  margin-top: 18px;
  margin-bottom: 10px;  
}

.newCon .item .content {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 9px;
  font-size: 14px;
}

.newCon .item .imgItem {
  font-size: 0;
}
.newCon .item .imgItem image {
  width: 32.6%;
  display: inline-block;
  vertical-align: top;
  margin-right: 1%;
  box-sizing: border-box;
  margin-bottom: 5px;
}
.newCon .item .imgItem image:nth-child(3n) {
  margin-right: 0;
}

.newCon .item .right_con {
  text-align: right;
}
.newCon .item .right_con .time {
  display: inline-block;
  color: #ababab;
  font-size: 12px;
  margin-right: 10px;
}
.newCon .item .right_con .anthor {
  display: inline-block;
  color: #ababab;
  font-size: 12px;
}





.more {
  text-align: center;
  margin-bottom: 20px;
}
.more .moreCon {
  border: 1px solid #4d7435;
  font-size: 12px;
  padding: 3px 25px;
  display: inline-block;
  background: #4d7435;
  border-radius: 20px;
  color: #fff;
}
.more .moreCon text {
  color: #fff;
  height: 30px;
  line-height: 30px;
  vertical-align: middle;
  display: inline-block;
  margin-right: 10px;
}

